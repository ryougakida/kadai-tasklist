<% if logged_in? %>
    <p>ログイン完了ユーザ: <%= current_user.name %></p>
    
    <% if @tasks.any? %>
        <h1>タスク一覧</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>id</th>
                    <th>ステータス</th>
                    <th>タスク</th>
                </tr>
            </thead>
            <tbody>
                <% @tasks.each do |task| %>
                    <tr>
                        <td><%= link_to task.id, task %></td>
                        <td><%= task.status %></td>
                        <td><%= task.content %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
        <div>
            <%= paginate @tasks %>
        </div>
        <%= link_to '新規タスクの入力', new_task_path, class: "btn bnt-primary" %>
    <% else %>
            <div class="center jumbotron">
        <div class="text-center">
            <h1>Please set the tasks!</h1>
            <%= link_to '新規タスク作成', new_task_path, class: 'btn btn-lg btn-primary' %>
        </div>
    </div>
    <% end %>
    
<% else %>
    <div class="center jumbotron">
        <div class="text-center">
            <h1>Welcome to the tasklist!</h1>
            <%= link_to 'Sign up now!', signup_path, class: 'btn bnt-lg btn-primary' %>
        </div>
    </div>
<% end %>